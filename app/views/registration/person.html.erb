<body class="registration">
    <div class="login-box">
    <h2>Login page</h2>
        <form method="post" id="loginForm" action="/registration">
            <div class="user-box">
                <input type="text" name="username" id="username">
                <label>Username</label>
            </div>
            <div class="user-box">
                <input type="password" name="password" id="password">
                <label>Password</label>
            </div>
            <div class="btn">
                <button type="submit" class="submit">
                    Submit
                </button>
            </div>
        </form>
    </div>
</body>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var userNameValue = document.querySelector('input[name="username"]');
        var passwordValue = document.querySelector('input[name="password"]');
        var sbmButton = document.querySelector('.submit');

        sbmButton.addEventListener('click', function () {
            var userNameValue1 = userNameValue.value;
            var passwordValue1 = passwordValue.value;

            if (userNameValue1.trim() === '' || passwordValue1.trim() === '') {
                alert("Вы заполнили не все данные");
                window.location.href = 'http://localhost:3000/registration';
                return;
            }
        })
    });
</script>